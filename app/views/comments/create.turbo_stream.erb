<%= turbo_stream.append "#{dom_id(@blog_post)}_comments" do %>
  <%= render partial: "comments/comment", locals: { comment: @comment, blog_post: @blog_post } %>
<% end %>

<%= turbo_stream.replace "#{dom_id(@blog_post)}_add_comment", partial: "form", locals: { comment: Comment.new, parent: nil, blog_post: @blog_post } %>